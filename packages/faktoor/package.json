{
  "name": "faktoor.js",
  "version": "0.0.1",
  "description": "All-in-one email toolkit - unified API for Gmail, Outlook, IMAP and more",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .turbo"
  },
  "keywords": ["email", "mail", "gmail", "outlook", "imap", "typescript", "faktoor"],
  "author": "Youssef Bouhjira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/youssef-bouhjira/faktoor.js.git",
    "directory": "packages/faktoor"
  },
  "dependencies": {
    "@faktoor/core": "workspace:*",
    "@faktoor/gmail": "workspace:*",
    "@faktoor/parser": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
